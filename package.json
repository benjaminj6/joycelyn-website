{
  "name": "joycelyn-website",
  "version": "1.0.0",
  "description": "Joycelyn Choo's portfolio site",
  "main": "index.js",
  "scripts": {

    "//": "Tasks for all files",
    "build": "npm run build:html && npm run build:less",
    "watch": "npm run watch:html & npm run watch:less",

    "//": "Tasks for all html files",  
    "build:html": "npm run build:html:home && npm run build:html:about-pages && npm run build:html:teaching-pages && npm run build:html:performing && npm run build:html:blog && npm run build:html:contact",
    "watch:html": "npm run watch:html:templates & npm run watch:html:home & npm run watch:html:about-pages & npm run watch:html:teaching-pages & npm run watch:html:performing & npm run watch:html:blog & npm run watch:html:contact",
    "watch:html:templates": "chokidar 'html/_templates/*.js' -c 'npm run build:html'",
  
    "//": "Tasks for all less files",  
    "build:less": "npm run build:less:home",
    "watch:less": "npm run watch:less:templates & npm run watch:less:home",
    "watch:less:templates": "chokidar 'less/_templates/*.less' -c 'npm run build:less'",

    "//": "Tasks for the 'Home' page",  
    "build:html:home": "assemble --cwd=html/home",
    "watch:html:home": "chokidar 'html/home/*.js' -c 'npm run build:html:home'",
    "build:less:home": "lessc --source-map less/home.less public/home/style.css",
    "watch:less:home": "chokidar 'less/home.less' -c 'npm run build:less:home'",

    "//": "Tasks for pages in the 'About Me' section",  
    "build:html:about-pages": "npm run build:html:bio && npm run build:html:teaching-philosophy",
    "watch:html:about-pages": "npm run watch:html:bio & npm run watch:html:teaching-philosophy",

    "//": "Tasks for the 'Bio' page",      
    "build:html:bio": "assemble --cwd=html/bio",
    "watch:html:bio": "chokidar 'html/bio/*.js' 'data/bio-data.js' -c 'npm run build:html:bio'",

    "//": "Tasks for the 'Teaching Philosophy' page",  
    "build:html:teaching-philosophy": "assemble --cwd=html/teaching-philosophy",
    "watch:html:teaching-philosophy": "chokidar 'html/teaching-philosophy/*.js' 'data/teaching-philosophy-data.js' -c 'npm run build:html:teaching-philosophy'",

    "//": "Tasks for the pages in the 'Teaching' section",  
    "build:html:teaching-pages": "npm run build:html:why-private-lessons && npm run build:html:student-opportunities && npm run build:html:studio-policies && npm run build:html:suzuki-method",
    "watch:html:teaching-pages": "npm run watch:html:why-private-lessons & npm run watch:html:student-opportunities & npm run watch:html:studio-policies & npm run watch:html:suzuki-method",

    "//": "Tasks for the 'Why Private Lessons?' page",  
    "build:html:why-private-lessons": "assemble --cwd=html/why-private-lessons",
    "watch:html:why-private-lessons": "chokidar 'html/why-private-lessons/*.js' 'data/why-private-lessons-data.js' -c 'npm run build:html:why-private-lessons'",
   
    "//": "Tasks for the 'Student Opportunities' page",  
    "build:html:student-opportunities": "assemble --cwd=html/student-opportunities",
    "watch:html:student-opportunities": "chokidar 'html/student-opportunities/*.js' 'data/student-opportunities-data.js' -c 'npm run build:html:student-opportunities'",

    "//": "Tasks for the 'Studio Policies' page",  
    "build:html:studio-policies": "assemble --cwd=html/studio-policies",
    "watch:html:studio-policies": "chokidar 'html/studio-policies/*.js' 'data/studio-policies-data.js' -c 'npm run build:html:studio-policies'",

    "//": "Tasks for the 'Suzuki Method' page",  
    "build:html:suzuki-method": "assemble --cwd=html/suzuki-method",
    "watch:html:suzuki-method": "chokidar 'html/suzuki-method/*.js' 'data/suzuki-method-data.js' -c 'npm run build:html:suzuki-method'",

    "//": "Tasks for the 'Performing' page",  
    "build:html:performing": "assemble --cwd=html/performing",
    "watch:html:performing": "chokidar 'html/performing/*.js' 'data/performing-data.js' -c 'npm run build:html:performing'",

    "//": "Tasks for the 'Blog' page",  
    "build:html:blog": "assemble --cwd=html/blog",
    "watch:html:blog": "chokidar 'html/blog/*.js' 'data/blog-data.js' -c 'npm run build:html:blog'",

    "//": "Tasks for the 'Contact' page",  
    "build:html:contact": "assemble --cwd=html/contact",
    "watch:html:contact": "chokidar 'html/contact/*.js' 'data/contact-data.js' -c 'npm run build:html:contact'"
  },
  "author": "Benjamin Johnson",
  "license": "ISC",
  "dependencies": {
    "font-awesome": "^4.6.3",
    "jquery": "^3.1.0",
    "normalize.css": "^4.2.0",
    "pretty": "^1.0.0"
  },
  "devDependencies": {
    "assemble": "^0.17.1",
    "less": "^2.7.1"
  }
}
