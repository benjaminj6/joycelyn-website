{
  "name": "joycelyn-website",
  "version": "1.0.0",
  "description": "Joycelyn Choo's portfolio site",
  "main": "index.js",
  "scripts": {

    "//": "Tasks for all files",
    "build": "npm run build:html && npm run build:less",
    "watch": "npm run watch:html & npm run watch:less",

    "//": "Tasks for all html files",
    "build:html": "assemble bio:html blog:html contact:html home:html performing:html student-opportunities:html studio-policies:html suzuki-method:html teaching-philosophy:html why-private-lessons:html",  
    "watch:html": "npm run watch:templates:html & npm run watch:home:html & npm run watch:about:html & npm run watch:teaching-pages:html & npm run watch:performing:html & npm run watch:blog:html & npm run watch:contact:html",
    "watch:templates:html": "chokidar 'html/_templates/*.js' -c 'npm run build:html'",
  
    "//": "Tasks for all less files",  
    "build:less": "npm run build:home:less",
    "watch:less": "npm run watch:templates:less & npm run watch:home:less",
    "watch:templates:less": "chokidar 'less/_templates/*.less' -c 'npm run build:less'",

    "//": "Tasks for the 'Home' page",  
    "build:home:html": "assemble home:html",
    "watch:home:html": "chokidar 'html/home/*.js' -c 'npm run build:home:html'",
    "build:home:less": "lessc --source-map less/home/style.less public/home/style.css",
    "watch:home:less": "chokidar 'less/home/*.less' -c 'npm run build:home:less'",

    "//": "Tasks for pages in the 'About Me' section",  
    "build:about:html": "assemble bio:html teaching-philosophy:html",
    "watch:about:html": "npm run watch:bio:html & npm run watch:teaching-philosophy:html",

    "//": "Tasks for the 'Bio' page",      
    "build:bio:html": "assemble bio:html",
    "watch:bio:html": "chokidar 'html/bio/*.js' -c 'assemble bio:html'",

    "//": "Tasks for the 'Teaching Philosophy' page",  
    "build:teaching-philosophy:html": "assemble teaching-philosophy:html",
    "watch:teaching-philosophy:html": "chokidar 'html/teaching-philosophy/*.js' -c 'assemble teaching-philosophy:html'",

    "//": "Tasks for the pages in the 'Teaching' section",  
    "build:teaching-pages:html": "npm run build:why-private-lessons:html && npm run build:student-opportunities:html && npm run build:studio-policies:html && npm run build:suzuki-method:html",
    "watch:teaching-pages:html": "npm run watch:why-private-lessons:html & npm run watch:student-opportunities:html & npm run watch:studio-policies:html & npm run watch:suzuki-method:html",

    "//": "Tasks for the 'Why Private Lessons?' page",  
    "build:why-private-lessons:html": "assemble why-private-lessons:html",
    "watch:why-private-lessons:html": "chokidar 'html/why-private-lessons/*.js' -c 'assemble why-private-lessons:html'",
   
    "//": "Tasks for the 'Student Opportunities' page",  
    "build:student-opportunities:html": "assemble student-opportunities:html",
    "watch:student-opportunities:html": "chokidar 'html/student-opportunities/*.js' -c 'assemble student-opportunities:html'",

    "//": "Tasks for the 'Studio Policies' page",  
    "build:studio-policies:html": "assemble studio-policies:html",
    "watch:studio-policies:html": "chokidar 'html/studio-policies/*.js' -c 'assemble studio-policies:html'",

    "//": "Tasks for the 'Suzuki Method' page",  
    "build:suzuki-method:html": "assemble suzuki-method:html",
    "watch:suzuki-method:html": "chokidar 'html/suzuki-method/*.js' -c 'assemble suzuki-method:html'",

    "//": "Tasks for the 'Performing' page",  
    "build:performing:html": "assemble performing:html",
    "watch:performing:html": "chokidar 'html/performing/*.js' -c 'assemble performing:html'",

    "//": "Tasks for the 'Blog' page",  
    "build:blog:html": "assemble blog:html",
    "watch:blog:html": "chokidar 'html/blog/*.js' -c 'assemble blog:html'",

    "//": "Tasks for the 'Contact' page",  
    "build:contact:html": "assemble contact:html",
    "watch:contact:html": "chokidar 'html/contact/*.js' -c 'assemble contact:html'"
  },
  "author": "Benjamin Johnson",
  "license": "ISC",
  "dependencies": {
    "font-awesome": "^4.6.3",
    "jquery": "^3.1.0",
    "normalize.css": "^4.2.0",
    "pretty": "^1.0.0"
  },
  "devDependencies": {
    "assemble": "^0.17.1",
    "less": "^2.7.1"
  }
}
